<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="com.yomahub.liteflow.test.declCmp.cmp" />

    <bean id="springAware" class="com.yomahub.liteflow.spi.spring.SpringAware"/>

    <bean class="com.yomahub.liteflow.spring.DeclBeanDefinition"/>

    <bean class="com.yomahub.liteflow.spring.ComponentScanner" depends-on="springAware"/>

    <bean id="liteflowConfig" class="com.yomahub.liteflow.property.LiteflowConfig">
        <property name="ruleSource" value="declCmp/flow.xml"/>
    </bean>

    <bean id="flowExecutor" class="com.yomahub.liteflow.core.FlowExecutor">
        <constructor-arg name="liteflowConfig" ref="liteflowConfig"/>
    </bean>
</beans>